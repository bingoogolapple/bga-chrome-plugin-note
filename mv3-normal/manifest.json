{
    "manifest_version": 3,
    "name": "bga-chrome-plugin-note-v3",
    "description": "Chrome 插件开发学习笔记",
    "version": "1.0.0",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "activeTab",
        "scripting",
        "cookies",
        "contextMenus",
        "notifications",
        "alarms",
        "tts",
        "webRequest",
        "declarativeContent",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true
    },
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_title": "默认使用的是name，这里自定义一下"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*",
                "file://*"
            ],
            "css": [
                "style/content.css"
            ],
            "js": [
                "js/contentScript.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/inject.js"
            ],
            "matches": [
                "https://www.baidu.com/*"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+O",
                "mac": "MacCtrl+Shift+O"
            },
            "description": "打开 popup.html"
        }
    },
    "chrome_url_overrides": {
        "newtab": "html/newtab.html"
    },
    "devtools_page": "html/devtools.html",
    "omnibox": {
        "keyword": "bga"
    }
}